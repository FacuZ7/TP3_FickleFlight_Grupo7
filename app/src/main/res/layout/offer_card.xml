<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:padding="16dp">


        <TextView
            android:id="@+id/card_title"
            android:layout_width="339dp"
            android:layout_height="33dp"
            android:layout_marginTop="28dp"
            android:text="@string/mastercard_title"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_text"
            android:layout_width="232dp"
            android:layout_height="59dp"
            android:text="@string/mastercard_text"
            app:layout_constraintBottom_toBottomOf="@id/left_image"
            app:layout_constraintEnd_toStartOf="@id/right_icon"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/left_image"
            app:layout_constraintTop_toTopOf="@id/left_image"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="104dp"
            android:layout_height="62dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/mastercard_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_title" />

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="13dp"
            android:layout_height="22dp"
            android:src="@drawable/vector_1"
            app:layout_constraintBottom_toBottomOf="@id/left_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/left_image"
            app:layout_constraintVertical_bias="0.566" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>